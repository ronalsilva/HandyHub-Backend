// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  salt        String
  password    String
  handyman    Boolean
  address     Address  @relation(fields: [addressId], references: [id])
  addressId   Int
}

model Address {
  id          Int      @id @default(autoincrement())
  address     String
  city        String
  province    String
  postalCode  String
  users       User[]
}